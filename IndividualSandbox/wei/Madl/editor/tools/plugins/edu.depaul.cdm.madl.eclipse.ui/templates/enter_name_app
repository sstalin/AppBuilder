/* Mobile Application Definition Language */

app(name : 'First App') { 

  View(id: top) { 
    Label(id: l1, text: 'Hello') 
    Button(id: b1, text: 'Press')
    Button(id: b2, text: 'Exit')
    Panel(id: row3, orientation: 'horizontal') { 
      Label(id: l2, text : 'Name') 
      Text(id: t1, text : 'Enter text')
    }
  }

}