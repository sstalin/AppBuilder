/* Mobile Application Definition Language */

app(name: 'App Button 6a') { 
  
  View { 
    Label(id: l1, text: 'Hello', width: '*') 
    Button(id: b1, text: 'Button 1',
		   action: { t1.text = b1.text })
	Button(id: b2, text: 'Button 2',
		   action: { t1.text = b2.text }) 

	Text(id: t1, prompt : 'Type text')

    Button(id: b3, text: 'Set text',
		   action: { l1.text = t1.text }) 
  }

}


