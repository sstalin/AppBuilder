
app(name : 'Alerts 2') { 

  View(id: top) { 
    Button(text: 'Alert 1',
		   next: p1)
    Button(text: 'Alert 2',
		   next: p2)
    Button(text: 'Alert 3',
		   next: p3)

    Label(id: l1, text: 'Messages', width: '*')
    
    Alert(id: p1,
		  title: 'Simple Alert',
		  message: '<Message>',
		  action: { l1.text = 'Simple Alert' } ) 
    
    Alert(id: p2,
		  title: 'OK-Cancel Alert',
		  message: '<Message>',
		  cancel: 'Cancel',
		  affirm: 'OK',
		  action: { btn -> l1.text = "Ok-Cancel Alert: ${btn}" })
    
  }
}