
app(name : 'Alerts') { 

  View(id: top) { 
    Button(text: 'Action 1',
		   next: p1)
    Button(text: 'Action 2',
		   next: p2)
    Button(text: 'Action 3',
		   next: p3)
    Button(text: 'Alert 1',
		   next: p4)
    Button(text: 'Alert 2',
		   next: p5)
    Button(text: 'Alert 3',
		   next: p6)

    Popup(id: p1, 
		  title: 'Simple Action')

    Popup(id: p2,
		  title: 'OK-Cancel Action',
		  cancel: 'Cancel',
		  affirm: 'OK')

    Alert(id: p4,
		  title: 'Simple alert',
		  message: '<Message>') 
    
    Alert(id: p5,
		  title: 'OK-Cancel Alert',
		  message: '<Message>',
		  cancel: 'Cancel',
		  affirm: 'OK')
  }
}