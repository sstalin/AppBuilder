/* Mobile Application Definition Language */

app('First App 11') { 

  View { 
    Table(cols: [ [align: Right] /* col 0 */ ]) { 
      Label('Hello') 
      Row { 
		Label('Text') 
		Text(prompt: 'enter text')
      }
      Row { 
		Label('Decimal') 
		Text(type: decimal) 
      }
      Row { 
		Label('Number') 
		Text(type: number) 
      }
      Row { 
		Label('Email') 
		Text(type: email) 
      }
      Row { 
		Label('Phone') 
		Text(type: tel) 
      }
      Row { 
		Label('URL') 
		Text(type: url) 
      }
      Row { 
		Label('Address') 
		Text(prompt: 'Address')
      }
      Row { 
		Label('ZIP') 
		Text(prompt: 'ZIP code', pattern: '[0-9]*')
      }
    }
  }

}