/* Mobile Application Definition Language */

app(name : 'Test Font') { 

  View { 
	Row { 
	  Label(text: 'Default') 
	  Label(text: 'Bold', font: Bold) 
	  Label(text: 'Italic', font: Italic) 
	}

	Row { 
	  Label(text: 'Plain, 24', font: [Plain, 24])
	  Label(text: '24', font: [24])
	}

	Row { 
	  Label(text: 'Bold, 24', font: [Bold, 24])
	  Label(text: '24, Bold', font: [24, Bold])
	}

	Row { 
	  Label(text: 'Italic, 24', font: [Italic, 24])
	}

	Row { 
	  Label(text: 'Serif, 20', font: [ Serif, 20 ])
	  Label(text: 'Serif, Italic, 20', font: [ Serif, Italic, 20 ])
	}

	Row { 
	  Label(text: 'Serif, 20, Bold', font: [ Serif, 20, Bold ])
	  Label(text: '20, Serif, Plain', font: [ 20, Serif, Plain ])
	}

	
	Label(text: 'Serif', font: Serif)

	Label(text: 'Sans, 20, Italic', font: [ Sans, 20, Italic ])

	Label(text: 'Mono, 20, Bold', font: [ Mono, 20, Bold ])


	Row { 
	  Label(text: 'size: 24', font: [size: 24])
	  Label(text: '24', font: 24)
	}
  }

}