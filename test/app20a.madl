app('Graphics 2') { 

  Canvas(background: Bisque, antialias: true) { 
	Rect(frame: [10, 10, 20, 20], color: red, join: Bevel)
	Rect(position: [40, 10], size: [20, 30], color: blue, fillColor: yellow)
	Line(start: [10, 40], end: [100, 50], width: 4, cap: Round)
	Ellipse(10, 60, 40, 30) 

	Point(100, 50)
	Circle(center: [100, 100], radius: 30)

	Arc(center: [250, 50], radius: 50, startAngle: 0, endAngle: 180)
	Arc(center: [250, 100], radius: 50, startAngle: 150, endAngle: 30, clockwise: true)
	Arc(center: [250, 200], radius: 50, startAngle: 150, endAngle: 30, clockwise: false)
	Arc(start: [200, 300], end: [300, 300], control: [250, 270], radius: 70) 

	Curve(start: [50, 200], end: [150, 200], control: [ [80,180], [120, 220] ])
  }

}